# Google Calendar OAuth2
# Obtain from Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client IDs
# Token file path - created automatically after first auth flow
GOOGLE_TOKEN_FILE=~/.schedule_mcp/google_token.json
# Credentials file downloaded from Google Cloud Console
GOOGLE_CREDENTIALS_FILE=~/.schedule_mcp/google_credentials.json

# Notion Integration Token
# Obtain from https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database IDs (from the database URLs in Notion)
NOTION_APPOINTMENTS_DB_ID=your_notion_appointments_db_id
NOTION_TASKS_DB_ID=your_notion_tasks_db_id

# Optional: default calendar ID (use "primary" for your main Google Calendar)
GOOGLE_DEFAULT_CALENDAR_ID=primary

# Optional: your local timezone (e.g. America/Los_Angeles, Europe/London)
LOCAL_TIMEZONE=America/Los_Angeles
